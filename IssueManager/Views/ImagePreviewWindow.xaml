<Window
    x:Class="IssueManager.Views.ImagePreviewWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="800"
    Height="600"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="CanResizeWithGrip"
    ShowInTaskbar="False"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">

    <Border
        Padding="0"
        Background="#DD222222"
        CornerRadius="20">
        <Grid>
            <!--  Invisible Title Bar for dragging  -->
            <Border
                x:Name="TitleBar"
                Height="30"
                VerticalAlignment="Top"
                Background="Transparent"
                Cursor="Hand"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" />

            <!--  Gallery: Prev Button  -->
            <Button
                x:Name="PrevButton"
                Width="20"
                Height="40"
                Margin="0,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Background="Transparent"
                BorderBrush="Transparent"
                Click="Prev_Click"
                Content="⟨"
                FontSize="24"
                Foreground="White" />

            <!--  Gallery: Next Button  -->
            <Button
                x:Name="NextButton"
                Width="20"
                Height="40"
                Margin="0,0,00,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Background="Transparent"
                BorderBrush="Transparent"
                Click="Next_Click"
                Content="⟩"
                FontSize="24"
                Foreground="White" />

            <!--  Image Index Indicator  -->
            <TextBlock
                x:Name="ImageIndexText"
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontSize="16"
                FontWeight="SemiBold"
                Foreground="White" />

            <!--  The preview image itself  -->
            <Image
                x:Name="PreviewImage"
                Margin="70,30,70,30"
                Stretch="Uniform" />

            <!--  Close Button  -->
            <Button
                Width="32"
                Height="32"
                Margin="0,5,5,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Background="#88000000"
                BorderBrush="Transparent"
                Click="CloseButton_Click"
                Content="✖"
                FontSize="20"
                Foreground="White" />
        </Grid>

    </Border>
</Window>
